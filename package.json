{
  "name": "sparkmind",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:web:https": "npm run dev:https --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspace=apps/web",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "start": "npm run start --workspace=apps/web",
    "start:web": "npm run start --workspace=apps/web",
    "start:api": "npm run start --workspace=apps/api",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "deploy:cf": "npm run deploy:cf --workspace=apps/web && npm run deploy:cf --workspace=apps/api",
    "deploy:cf:web": "npm run deploy:cf --workspace=apps/web",
    "deploy:cf:api": "npm run deploy:cf --workspace=apps/api",
    "deploy:cf:dev": "npm run deploy:cf:dev --workspace=apps/api"
  },
  "dependencies": {
    "@walletconnect/heartbeat": "^1.2.2",
    "busboy": "^1.6.0",
    "react-native-uuid": "^2.0.3"
  }
}
